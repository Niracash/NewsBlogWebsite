@model List<NewsBlog.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid">
    <a class="btn btn-success mb-3" asp-action="Register" asp-controller="User">Create user</a>
    <div class="card">
        <div class="card-header bg-dark">
            <h4 class="card-title text-white">User List</h4>
        </div>
        <div class="card-body">
            <table class="table table-borderless table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Role</th>
                        <th class="text-right">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Role</td>
                            <td class="text-right">
                                <a class="btn btn-secondary" asp-action="PasswordReset" asp-controller="User" asp-route-id="@user.Id">Forgot Password</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
