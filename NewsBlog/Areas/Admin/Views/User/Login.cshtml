@model NewsBlog.ViewModels.LoginViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login";
}

<!-- Outer Row -->
<div class="row justify-content-center align-items-center vh-100">
    <!-- added align-items-center and vh-100 to vertically center -->

    <div class="col-xl-5 col-lg-7 col-md-9">
        <!-- Adjusted the column sizes for better centering -->

        <div class="card o-hidden border-0 shadow-lg">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row justify-content-center">
                    <!-- Added justify-content-center to center the content horizontally -->
                    <div class="col-lg-12">
                        <!-- Made it 12 columns wide since we removed the image -->
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4 font-weight-bold">Welcome Back!</h1>
                            </div>
                            <form class="user" method="post" asp-action="Login">
                                <div class="form-group">
                                    <input asp-for="Username" type="text" class="form-control form-control-user"
                                           id="exampleInputEmail" aria-describedby="emailHelp"
                                           placeholder="Enter username...">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-user"
                                           id="exampleInputPassword" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customCheck">
                                        <label class="custom-control-label" for="customCheck">
                                            Remember
                                            Me
                                        </label>
                                    </div>
                                </div>
                                <input type="submit" href="index.html" class="btn btn-dark btn-user btn-block" value="Login">
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="register.html">Create an Account!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
